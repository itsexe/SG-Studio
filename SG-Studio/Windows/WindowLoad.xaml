<controls:MetroWindow x:Class="SG_Studio.WindowLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Loading" Height="109" Width="489.196" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="455*"/>
            <ColumnDefinition Width="16*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="pb"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="435" Height="20" Grid.Column="1"/>
        <Label x:Name="label" Content="Processing:" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.789,0.269" Grid.Row="1" Grid.Column="1"/>
        <Label x:Name="CurrentFile" Content="res.000" HorizontalAlignment="Left" Margin="79,2,0,0" VerticalAlignment="Top" Width="286" Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="370,3,0,0" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</controls:MetroWindow>
