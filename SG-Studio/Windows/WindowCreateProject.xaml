        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Create Project" Height="184.245" Width="359.718" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="118*"/>
            <ColumnDefinition Width="211*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Client Directory:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="103" HorizontalContentAlignment="Right" Grid.Row="1" Height="26"/>
        <TextBox x:Name="textBox_ClientDir" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" TextWrapping="Wrap" Text="Click to browse..." VerticalAlignment="Top" Width="191" IsReadOnly="True" PreviewMouseDown="OpenDir" Grid.Row="1" Grid.Column="1" Background="#FFBDBDBD"/>
