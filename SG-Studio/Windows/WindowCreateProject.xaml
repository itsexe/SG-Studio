        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="126,1,0,0" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click" Grid.Row="3" Height="25" Grid.Column="1"/>
        <TextBox x:Name="textBox_ProjectName" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="191" IsReadOnly="False" Grid.Column="1"/>
